<UserControl x:Class="OpenGL_Wpf.ViewControls.LightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenGL_Wpf.ViewControls"
            xmlns:basectrl="clr-namespace:OpenGL_Wpf.ViewControls.BaseControls"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
		<basectrl:Vertex3Control DescName="Position"
									 DataContext="{Binding LightPosition}"/>
		<basectrl:Vertex3Control DescName="Direction"
									 DataContext="{Binding Direction}"/>
		<basectrl:Vertex3Control DescName="Target"
									 DataContext="{Binding Target}"/>
		<basectrl:Vertex3Control DescName="Diffuse"
									 DataContext="{Binding Diffuse}"/>
		<basectrl:BoolControl DescName="Show Model"
							  IChecked="{Binding ShowModel}"
							  ICMD="{Binding CMD}"
							  />
		<basectrl:BoolControl DescName="Switch On"
							  IChecked="{Binding OnOff}"
							  ICMD="{Binding SwitchLight}"
							  />
		<basectrl:BoolControl DescName="Attenuate"
							  IChecked="{Binding Attenuate}"
							  ICMD="{Binding CMD_Attenuate}"
							  />
		
		
		

	</StackPanel>
</UserControl>
