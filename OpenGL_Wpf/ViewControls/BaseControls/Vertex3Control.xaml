<UserControl x:Class="OpenGL_Wpf.ViewControls.BaseControls.Vertex3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenGL_Wpf.ViewControls.BaseControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Horizontal"
					VerticalAlignment="Top"
					Margin="5"
					>
		<StackPanel.Resources>
			<Style TargetType="TextBox">
				<Setter Property="Margin" Value="2"/>
				<Setter Property="Width" Value="50"/>
				<EventSetter Event="PreviewTextInput" Handler="NumberValidationTextBox"/>
			</Style>
		</StackPanel.Resources>
		<TextBlock x:Name="txtname" Text="{Binding DescName}"
					   Foreground="White"/>
		<TextBox Text="{Binding Path=X}" />
		<TextBox Text="{Binding Path=Y}"/>
		<TextBox Text="{Binding Path=Z}"/>
	</StackPanel>
</UserControl>
