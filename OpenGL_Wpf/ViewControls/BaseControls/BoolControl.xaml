<UserControl x:Class="OpenGL_Wpf.ViewControls.BaseControls.BoolControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenGL_Wpf.ViewControls.BaseControls"
             mc:Ignorable="d" 
             x:Name="boolctrl"
			 d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Horizontal"
				VerticalAlignment="Top">
		<TextBlock Text="{Binding DescName}"
				   Foreground="White"
				   x:Name="Desc"/>
		<CheckBox Command="{Binding ElementName=boolctrl,Path= ICMD}"				  
				  x:Name="chkbx"
				  CommandParameter="{Binding  ElementName=chkbx,Path=IsChecked}"
				  IsChecked="{Binding ElementName=boolctrl,Path=IChecked, Mode=TwoWay}"
				  
				  />
	</StackPanel>
</UserControl>
