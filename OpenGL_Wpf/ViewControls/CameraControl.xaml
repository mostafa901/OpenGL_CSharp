<UserControl x:Class="OpenGL_Wpf.ViewControls.CameraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenGL_Wpf.ViewControls"
             xmlns:basectrl="clr-namespace:OpenGL_Wpf.ViewControls.BaseControls"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			  
			 >
	<Grid>
		<StackPanel  >
			<basectrl:Vertex3Control DataContext="{Binding Position}" 
									 DescName="Position"/>
			<basectrl:Vertex3Control DataContext="{Binding Target}" 
									 DescName="Target"/>
			<basectrl:BoolControl DescName="Show Model"
								  IChecked="{Binding ShowModel}"
									ICMD="{Binding CMD}"								  
								  />
			<basectrl:BoolControl DescName="Show Depth"
								  IChecked="{Binding ShowDepth}"
									ICMD="{Binding CMD_ShowDepth}"								  
								  
								  />
		</StackPanel>


	</Grid>
</UserControl>
